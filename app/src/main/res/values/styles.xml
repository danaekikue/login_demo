<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="input_fields" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/munsell</item>
        <item name="boxStrokeColor">@color/forest_green_light</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="round_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="recycler_title">
        <item name="android:layout_marginStart">38dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/munsell</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="recycler">
        <item name="android:layout_marginStart">38dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>


</resources>